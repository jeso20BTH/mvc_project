{% include 'parts/header.html.twig' %}

<h1>{{header}}</h1>
<div class="flex column center">
    <h2>{{ summary.name }}</h2>
    <h3>Score {{ summary.score }}p</h3>
    <div class="flex row around">
        <p>Kills: {{ summary.kills }}</p>
        <p>Exp: {{summary.exp}}</p>
    </div>
    <div class="flex row around">
        <p>Damage dealt: {{ summary.damageDealt }}hp</p>
        <p>Damage taken: {{ summary.damageTaken }}hp</p>
    </div>
    <div class="flex row center">
        <p>Healt gain: {{summary.heal}}hp</p>
    </div>
</div>
<div class="flex row center">
    <form class="" action="{{ path('save_highscore') }}" method="post">
        <button class="button width-auto" type="submit" name="button">Menu</button>
    </form>
</div>

<script type="text/javascript" src="../../bars.js"></script>
